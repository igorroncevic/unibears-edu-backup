{
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "airbnb/hooks",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "prefer-const": "error",
        "indent": ["error", 4]
    },
    "globals": {
        "JSX": "readonly"
    }
}
